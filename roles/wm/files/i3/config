set $mod Mod4

### THEME ###
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:SF Pro Rounded Bold 11

### Borders
for_window [class="^.*"] border pixel 2
set $unfocused #111111
client.focused_inactive #000000 #000000 #aa0000 #aa0000 #000000
client.unfocused $unfocused $unfocused #444444 $unfocused $unfocsued

set $focused #009999
client.focused $focused $focused #111111 #aa0000 $focused

# Gaps
# Change gap size
gaps outer 6
gaps inner 6

